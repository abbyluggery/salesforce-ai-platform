<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Access to Wellness Tracking and future lifestyle modules (Meal Planning, Household Management) WITHOUT job search features. Ideal for users who want neurodivergent life management tools but are not currently job seeking.</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Wellness Only Access</label>

    <!-- Wellness Objects ONLY - No Job Search Objects -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>true</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>Daily_Routine__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Wellness Apex Classes ONLY - No Job Search Classes -->
    <classAccesses>
        <apexClass>EnergyAdaptiveScheduler</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <classAccesses>
        <apexClass>DailyRoutineInvocable</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <!-- Note: Test classes excluded since end users don't need them -->

    <!-- Tab Visibility - Wellness ONLY -->
    <tabSettings>
        <tab>Daily_Routine__c</tab>
        <visibility>Visible</visibility>
    </tabSettings>

    <!-- Note: Job Search tabs will not appear since this permission set
         does not grant object permissions for Job Search objects.
         Tabs are controlled by object access, not explicit tab visibility. -->

    <!-- Standard User Permissions (no admin access) -->
    <userPermissions>
        <enabled>false</enabled>
        <name>ViewSetup</name>
    </userPermissions>

    <userPermissions>
        <enabled>false</enabled>
        <name>ModifyAllData</name>
    </userPermissions>
</PermissionSet>
