<html>
<head>
    <style>
        @page {
            margin: 0.75in;
        }
        body {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 11pt;
            line-height: 1.4;
        }
        .content {
            white-space: pre-wrap;
        }
    </style>
</head>
<body>
    <div class="content">
        <apex:outputText value="{!coverLetterContent}" escape="false"/>
    </div>
</body>
</html>
</apex:page>
