<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Screen_Time_Non_Negative</fullName>
    <active>true</active>
    <description>Ensures screen time is non-negative</description>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Screen_Time_Minutes__c)),
    Screen_Time_Minutes__c &lt; 0
)</errorConditionFormula>
    <errorDisplayField>Screen_Time_Minutes__c</errorDisplayField>
    <errorMessage>Screen Time must be a non-negative number.</errorMessage>
</ValidationRule>
